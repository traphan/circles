<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ren95.lab3_shakurov_renat.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Построить примитивный МП - автомат. Показать последовательность его конфигураций для распознавания. {1 n 0 n 1m0m | n,m>0};"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText1"
            android:layout_weight="0.15"
            android:background="@color/baground1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Задание 1"
                android:id="@+id/button_1"
                android:layout_weight="0.2"
                android:onClick="pressButton1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:layout_weight="0.8" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=". Построить непримитивный МП-автомат (постараться найти автомат с одним состоянием), который будет выполнять следующие переводы:1 n 0m в 1 n 22m, n>0 ,m>0;"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Задание 2"
                android:id="@+id/button2"
                android:layout_weight="0.2"
                android:onClick="pressButton2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_weight="0.8" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
